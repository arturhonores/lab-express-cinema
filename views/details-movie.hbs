<div class="container">
  <h1>Details Movies</h1>
  <hr />
</div>

<div class="container">
  <div class="row">
    <div class="col-7 mx-auto">
      <div class="card" style="max-width: 740px;">
        <div class="row g-0">
          <div class="col-lg-4">
            <img
              src={{image}}
              class="rounded-start"
              alt="..."
              style="width: 100%; height:100%"
            />
          </div>
          <div class="col-lg-8">
            <div class="card-body">
              <h5 class="card-title text-center">{{title}}</h5>
              <p class="card-text">{{description}}</p>
              <p class="card-text">
                <ul>
                  {{#each stars}}
                    <li>{{this}}</li>
                  {{/each}}
                </ul>
              </p>
              <p class="card-text"><small class="text-body-secondary">Director:
                  {{director}}</small></p>
              <p class="card-text"><small
                  class="text-body-secondary"
                >{{showtimes}}</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>